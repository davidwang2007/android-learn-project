<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hmkcode="http://schemas.android.com/apk/res-auto" >

    <!-- Search Widget -->
    <item
        android:id="@+id/action_search"
        android:icon="@drawable/ic_action_search"
        android:title="@string/action_search"
        hmkcode:actionProviderClass="android.support.v7.widget.ShareActionProvider"
        hmkcode:actionViewClass="android.support.v7.widget.SearchView"
        hmkcode:showAsAction="always"/>

    <!-- Refresh -->
    <item
        android:id="@+id/action_refresh"
        android:icon="@drawable/ic_action_refresh"
        android:title="@string/action_refresh"
        hmkcode:showAsAction="always"/>
    <item
        android:icon="@drawable/ic_action_overflow"
        android:title="@string/action_help"
        hmkcode:showAsAction="always">
        <menu>

            <!-- Location Found -->
            <item
                android:id="@+id/action_location_found"
                android:icon="@drawable/ic_action_location_found"
                android:title="@string/action_location_found"
                hmkcode:showAsAction="ifRoom"/>

            <!-- Help -->
            <item
                android:id="@+id/action_help"
                android:icon="@drawable/ic_action_help"
                android:title="@string/action_help"
                hmkcode:showAsAction="ifRoom"/>

            <!-- Check updates -->
            <item
                android:id="@+id/action_check_updates"
                android:icon="@drawable/ic_action_refresh"
                android:title="@string/action_check_updates"
                hmkcode:showAsAction="ifRoom"/>
        </menu>
    </item>

</menu>